{
  "name": "@catalyst/design-system",
  "version": "1.0.0",
  "description": "A modern, accessible design system extracted from Catalyst project",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "styles",
    "tailwind.config.js"
  ],
  "scripts": {
    "build": "rollup -c && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "dev": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "design-system",
    "react",
    "tailwindcss",
    "typescript",
    "ui-components",
    "catalyst"
  ],
  "author": "Catalyst Team",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "next": "^14.0.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "next-themes": "^0.2.1",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "rollup": "^4.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "vitest": "^1.5.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "jsdom": "^22.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "storybook": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/catalyst/design-system.git"
  },
  "bugs": {
    "url": "https://github.com/catalyst/design-system/issues"
  },
  "homepage": "https://catalyst-design-system.vercel.app",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./tailwind.config.js": "./tailwind.config.js",
    "./styles/globals.css": "./styles/globals.css"
  },
  "sideEffects": [
    "./styles/globals.css"
  ]
}